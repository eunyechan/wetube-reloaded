extends base.pug

block content
    div
        video#preview
        button#startBtn Start recoding
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder="제목", required, type="text", name="title")
        input(placeholder="설명", required, type="text", name="description")
        input(placeholder="해쉬태그(쉼표로구분).", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")  

block scripts 
    script(src="/static/js/recorder.js") 