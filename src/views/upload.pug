extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            div#action__button-box
                button#actionBtn.social__btn • REC
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") 비디오 파일
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") 썸네일 파일
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="제목", required, type="text", name="title", maxlength=80)
            input(placeholder="영상설명", required, type="text", name="description", minlength=2)
            input(placeholder="해쉬태그( , 콤마 로 구분합니다)", required, type="text", name="hashtags")
            input(type="submit", value="Upload Video")#submit

block scripts 
    script(src="/static/js/recorder.js") 