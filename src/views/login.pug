extends base


block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="UserName" name="username", type="text", required)
        input(placeholder="Password" name="password", type="password", required)
        input.login-button(type="submit", value="Login")
        include partials/social-login
    div.auth-switch
        span 회원이 아니신가요?  
        br
        a.auth__switch-signup(href="/join")
            span 회원가입 하러가기 &rarr;