extends base.pug


block content 
    h4 비디오 수정
    form(method="POST")
        input(name="title", placeholder="비디오 제목", value=video.title, required)
        input(placeholder="설명", required, type="text", name="description", minLength=5, value=video.description)
        input(placeholder="해쉬태그 (, 콤마 로 분류합니다)", required, type="text", name="hashtags", value=video.hashtags.replace(/,/, ""))
        input(value="Save", type="submit")
        